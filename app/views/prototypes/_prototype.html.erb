<div class="card">
  <%# <%= link_to image_tag("#{prototype.image}", class: :card__img ), root_path %> 
  <%= link_to prototype_path(prototype) do %>
  <%= image_tag (prototype.image) %>
  <% end %>
  <div class="card__body">
    <%= link_to "#{prototype.title}", root_path, class: :card__title%>
    <p class="card__summary">
      <%= "#{prototype.catch_copy}" %>
    </p>
    <%# <%= link_to "by #{prototype.user.name}", user_path(@comment.prototype), class: :card__user %> 
    <%= link_to "by #{prototype.user.name}", "/users/#{prototype.user.id}", class: :card__user %>
  </div>
</div>